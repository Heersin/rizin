NAME=LUAC: disasm crash
FILE=bins/luac/big.luac
CMDS=pd 10 >/dev/null
EXPECT=<<EOF
EOF
RUN

NAME=LUAC: broken file
FILE=bins/luac/random.luac
CMDS=<<EOF
EOF
EXPECT=<<EOF
EOF
EXPECT_ERR=<<EOF
Bad Luac File : Truncated Code at [0x2f]
EOF
RUN